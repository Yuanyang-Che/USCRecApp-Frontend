<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="50dp"
    android:layout_marginTop="50dp"
    android:weightSum="100">

    <Button
        android:id="@+id/waitlistAdapterBookBtn"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_weight="38.6"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Book" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="27"
        android:orientation="vertical">

        <TextView
            android:id="@+id/waitlistAdapterDateTv"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="March 17, 2022" />

        <TextView
            android:id="@+id/waitlistAdapterCenterTv"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="USC Village Fitness Center" />

        <TextView
            android:id="@+id/waitlistAdapterTimeIdxTv"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="8:00-10:00AM" />

    </LinearLayout>

    <Button
        android:id="@+id/waitlistAdapterCancelBtn"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_weight="34.3"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Cancel" />


</LinearLayout>
